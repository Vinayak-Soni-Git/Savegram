<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".Fragments.HomeFragment">

    <EditText
        android:id="@+id/instagramLinkInputField"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_field_background"
        android:hint="Paste instagram link here"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <Button
        android:id="@+id/downloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download"
        android:textSize="12sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/instagramLinkInputField"
        app:layout_constraintTop_toTopOf="@id/instagramLinkInputField"
        app:layout_constraintBottom_toBottomOf="@id/instagramLinkInputField"
        android:background="@drawable/link_click_button_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>